@model IEnumerable<CustomerRelationshipManagementSystem.Models.CustomerCalls>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CallId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerRefId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeOfCall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CallId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerRefId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeOfCall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CallId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CallId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CallId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
